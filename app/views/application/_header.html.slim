nav.navbar.navbar-expand-lg.navbar-light
  = link_to root_path, class: 'navbar-brand'
    = image_tag 'pig.gif'
    span.brand-name= t('brand.name')
  .collapse.navbar-collapse
    ul.navbar-nav.mr-auto
      li.nav-item.active
        = link_to root_path, class: 'nav-link'
          span.oi.oi-home.left-icon
          span= t('menu.home')
    ul.nav.justify-content-end
      li.nav-item
        = link_to new_session_path, class: 'nav-link'
          i.fa.fa-leaf.left-icon
          span= t('menu.login')
